<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
 <mapper namespace="com.sns.invest.user.dao.UserDAO">
 	<select id="selectCountById" parameterType="string" resultType="int">
 		SELECT
 			count(*)
 		FROM
 			`user`
 		WHERE
 			`loginId` = #{loginId}	
 	</select>
 	
 	<insert id="insertUser" parameterType="map">
 		INSERT INTO
 			`user`
 		(
 			`loginId`
 			, `password`
 			, `nickName`
 			, `email`
 			, `profileImage`
 			, `profileStatusMessage`
 			, `location`
 			, `createdAt`
 			, `updatedAt`
 		) VALUES (
 			#{loginId}
 			, #{password}
 			, #{nickName}
 			, #{email}
 			, null
 			, null
 			, null
 			, now()
 			, now()
 		)
 	</insert>
 	
	<select id="selectUserByIdPassword" parameterType="map" resultType="com.sns.invest.user.model.User">
 		SELECT 
 			`id`
 			, `loginId`
 			, `password`
 			, `nickName`
 			, `email`
 			, `profileImage`
 			, `profileStatusMessage`
 			, `location`
 			, `createdAt`
 			, `updatedAt`
 		FROM
 			`user`
 		WHERE
 			`loginId` = #{idForLogin}
 			AND `password` = #{passwordForLogin}
	</select>

	<select id="selectUserByUserId" parameterType="map" resultType="com.sns.invest.user.model.User">
 		SELECT 
 			`id`
 			, `loginId`
 			, `password`
 			, `nickName`
 			, `email`
 			, `profileImage`
 			, `profileStatusMessage`
 			, `location`
 			, `createdAt`
 			, `updatedAt`
 		FROM
 			`user`
 		WHERE
 			`id` = #{userId}
	</select>
 	
 	<update id="updateUserLocation" parameterType="map">
 		UPDATE `user`
 		SET 
 			`location` = #{location}
 			, `updatedAt` = now()
 		WHERE `id` = #{userId}
 	</update>

	<update id="updateUserProfile" parameterType="map">
 		UPDATE `user`
 		SET 
 			`profileImage` = #{filePath}
 			, `profileStatusMessage` = #{profileStatusMessage}
 			, `updatedAt` = now()
 		WHERE `id` = #{userId}
 	</update>
 	
 	<select id="selectUserProfileImage" parameterType="int" resultType="String">
 		SELECT 
			`profileImage`
 		FROM
 			`user`
 		WHERE
 			`id` = #{userId}
	</select>

 	<select id="selectUserLocation" parameterType="int" resultType="String">
 		SELECT 
			`location`
 		FROM
 			`user`
 		WHERE
 			`id` = #{userId}
	</select>
 	
 	
 </mapper>
 